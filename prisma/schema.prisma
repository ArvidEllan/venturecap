// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

// Auth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("user") // "user" | "admin"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  investorProfile InvestorProfile?
  deals        Deal[]
  auditLogs    AuditLog[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application models
model InvestorProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  fundSize          Float?   // Total fund size in USD
  targetStage       String[] // ["pre-seed", "seed", "series-a", etc.]
  targetOwnership   Float?   // Target ownership percentage (e.g., 0.05 = 5%)
  maxCheck          Float?   // Maximum check size in USD
  minCheck          Float?   // Minimum check size in USD
  concentrationLimit Float?  // Max % of fund in single deal
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Deal {
  id          String   @id @default(cuid())
  userId      String
  companyName String
  stage       String?  // "pre-seed", "seed", "series-a", etc.
  sector      String?
  geography   String?
  jurisdiction String? // Legal jurisdiction
  status      String   @default("draft") // "draft", "analyzing", "completed"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  inputs       DealInput[]
  uploads      DealUpload[]
  analyses     Analysis[]

  @@index([userId])
  @@index([status])
}

model DealInput {
  id        String   @id @default(cuid())
  dealId   String
  version  Int      @default(1)
  data     Json     // Normalized metrics JSON
  source   String?  // "form", "csv", "document"
  createdAt DateTime @default(now())

  deal Deal @relation(fields: [dealId], references: [id], onDelete: Cascade)

  @@index([dealId])
  @@index([dealId, version])
}

model DealUpload {
  id        String   @id @default(cuid())
  dealId   String
  fileKey   String   // S3/R2 key
  fileName  String
  fileType  String   // "deck", "financials", "cap_table", etc.
  mimeType  String?
  fileSize  Int?
  checksum  String?
  createdAt DateTime @default(now())

  deal Deal @relation(fields: [dealId], references: [id], onDelete: Cascade)

  @@index([dealId])
}

model Analysis {
  id          String   @id @default(cuid())
  dealId     String
  version    Int      @default(1)
  score      Float?   // Overall score (0-100)
  resultsJson Json     // Full analysis results
  assumptionsJson Json  // Assumptions used
  status     String   @default("pending") // "pending", "completed", "failed"
  createdAt   DateTime @default(now())
  completedAt DateTime?

  deal Deal @relation(fields: [dealId], references: [id], onDelete: Cascade)

  @@index([dealId])
  @@index([dealId, version])
}

model Resource {
  id          String   @id @default(cuid())
  title       String
  description String?
  category    String   // "term-sheet", "dd-checklist", "ic-memo", "portfolio-ops", etc.
  tags        String[]
  fileKey     String   // S3/R2 key
  fileName    String
  mimeType    String?
  fileSize    Int?
  jurisdiction String?
  published   Boolean  @default(false)
  contributorId String?
  downloadCount Int    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([published])
}

model AuditLog {
  id         String   @id @default(cuid())
  actorId   String
  action    String   // "create", "update", "delete", "export", etc.
  entityType String   // "deal", "analysis", "resource", etc.
  entityId   String?
  metadata   Json?
  createdAt  DateTime @default(now())

  user User @relation(fields: [actorId], references: [id], onDelete: SetNull)

  @@index([actorId])
  @@index([entityType, entityId])
  @@index([createdAt])
}
